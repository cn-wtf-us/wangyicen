<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.feicui.edu.housekeeper.activity.SettingActivity">
    <!-- ActionBar 导航条 -->
    <com.feicui.edu.housekeeper.view.ActionBarView
        android:id="@+id/view_action_bar"
        android:layout_height="40dp"
        android:layout_width="match_parent">
    </com.feicui.edu.housekeeper.view.ActionBarView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lines"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                style="@style/setting_relative_layout">
                <TextView
                    style="@style/setting_text_view"
                    android:text="开机启动" />
                <ToggleButton
                    style="@style/setting_toggle_button" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lines"/>
            <RelativeLayout
                style="@style/setting_relative_layout">
                <TextView
                    style="@style/setting_text_view"
                    android:text="通知图标" />
                <ToggleButton
                    android:id="@+id/setting_notification"
                    style="@style/setting_toggle_button" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lines"/>
            <RelativeLayout
                style="@style/setting_relative_layout">
                <TextView
                    style="@style/setting_text_view"
                    android:text="消息推送" />
                <ToggleButton
                    style="@style/setting_toggle_button" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lines"/>
            <RelativeLayout
                android:id="@+id/setting_help"
                style="@style/setting_relative_layout">
                <TextView
                    style="@style/setting_text_view"
                    android:layout_centerVertical="true"
                    android:text="帮助说明"/>
                <ImageView
                    style="@style/setting_image_view"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lines"/>
            <RelativeLayout
                style="@style/setting_relative_layout">
                <TextView
                    style="@style/setting_text_view"
                    android:layout_centerVertical="true"
                    android:text="意见反馈"/>
                <ImageView
                    style="@style/setting_image_view"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lines"/>
            <RelativeLayout
                style="@style/setting_relative_layout">
                <TextView
                    style="@style/setting_text_view"
                    android:layout_centerVertical="true"
                    android:text="好友分享"/>
                <ImageView
                    style="@style/setting_image_view"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lines"/>
            <RelativeLayout
                style="@style/setting_relative_layout">
                <TextView
                    style="@style/setting_text_view"
                    android:layout_centerVertical="true"
                    android:text="版本更新"/>
                <ImageView
                    style="@style/setting_image_view"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lines"/>
            <RelativeLayout
                android:id="@+id/setting_about"
                style="@style/setting_relative_layout">
                <TextView
                    style="@style/setting_text_view"
                    android:layout_centerVertical="true"
                    android:text="关于我们"/>
                <ImageView
                    style="@style/setting_image_view"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lines"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
