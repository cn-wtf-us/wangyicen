<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 引导界面ImageView -->
    <style name="LeadImageView">
        <item name="android:layout_width">@dimen/lead_icons_width</item>
        <item name="android:layout_height">@dimen/lead_icons_height</item>
        <item name="android:layout_margin">@dimen/lead_icons_margin</item>
        <item name="android:src">@drawable/adware_style_default</item>
    </style>

    <!-- 主页面TextView -->
    <style name="home_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/home_entry_item</item>
        <item name="android:padding">20dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/home_item_textView</item>
        <item name="android:textStyle">normal</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">hitHomeItem</item>
    </style>

    <!-- Setting界面 -->
    <style name="setting_toggle_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/setting_togglebutton</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textOn"> </item>
        <item name="android:textOff"> </item>
    </style>

    <style name="setting_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="setting_relative_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="setting_image_view">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/ic_arrows_right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!--文件管理界面-->
    <style name="FileMgrRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:onClick">navigationToList</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/home_entry_item</item>
    </style>
    <style name="FileMgrLeftText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="FileMgrMiddleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="FileMgrImageView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_arrows_right</item>
    </style>
    <style name="FileMgrFrameLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
